#!/bin/bash
ACTUALDIR=$(pwd)
TARGET=''
DIRECTORY=''
FILES=''
while getopts t:f:d option
do
  case "${option}"
  in
    t) TARGET=${OPTARG};;
    d) DIRECTORY=${OPTARG};;
    f) FILES=$OPTARG;;
  esac
done
COMMAND="phpdoc --template=responsive"
if [ -z "$TARGET" ]; then
  TARGET="$ACTUALDIR/docs"
fi
COMMAND="$COMMAND -t /tmp/md_docs/"
if [ ! -z "$DIRECTORY" ]; then
  COMMAND="$COMMAND -d '$DIRECTORY'"
fi
if [ ! -z "$FILES" ]; then
  COMMAND="$COMMAND -f '$FILES'"
fi
if [ ! -d "$TARGET" ]; then
  mkdir $TARGET
fi
COMMAND="$COMMAND && phpdocmd /tmp/md_docs/structure.xml $TARGET && rm -fr /tmp/md_docs/"
eval $COMMAND

